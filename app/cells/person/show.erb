<div class="col-md-3">
  <div class="box box-primary">
    <div class="box-body box-profile">

      <h3 class="profile-username text-center">
        <%= person.name %><br>
        <%= person.last_name %>

      </h3>

      <ul class="list-group list-group-unbordered">
        <li class="list-group-item d-flex justify-content-between align-items-center w-100">
          <%= fa_icon('birthday-cake', clase: 'fa-fw margin-r-5') %>
          <span class="text-right"><%= date_format_long person.born_date %></span>
        </li>

        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= fa_icon(:envelope, clase: 'fa-fw margin-r-5') %>
          <a class="text-right" style="word-break: break-all;" href="mailto:<%= person.email %>"><%= person.email %></a>
        </li>
        <% if person.phone %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= fa_icon(:mobile, clase: 'fa-fw margin-r-5') %>
            <span class="text-right"><%= person.phone %></span>
          </li>
        <% end %>

      </ul>
    </div>
    <!-- /.box-body -->
  </div>
</div>
