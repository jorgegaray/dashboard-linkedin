
<div class="col col-12 justify-content-center m-5">
  <h3>Personas</h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered" width="100%">
      <thead >
      <tr>
        <th>Name</th>
        <th>Linkedin</th>
        <th>Last name</th>
        <th>Born date</th>
        <th>Phone</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
      </thead>
        <tfoot>
          <tr>
            <th>Name</th>
            <th>Linkedin</th>
            <th>Last name</th>
            <th>Born date</th>
            <th>Phone</th>
            <th>Url</th>
            <th colspan="3"></th>
          </tr>
        </tfoot>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.linkedIn_id %></td>
            <td><%= person.last_name %></td>
            <td><%= person.born_date %></td>
            <td><%= person.phone %></td>
            <td><%= person.url %></td>
            <td><%= link_to 'Show', person %></td>
            <td><%= link_to 'Edit', edit_person_path(person) %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
