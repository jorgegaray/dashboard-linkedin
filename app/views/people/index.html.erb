<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Linkedin</th>
      <th>Last name</th>
      <th>Born date</th>
      <th>Phone</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.linkedIn_id %></td>
        <td><%= person.last_name %></td>
        <td><%= person.born_date %></td>
        <td><%= person.phone %></td>
        <td><%= person.url %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

