<div class="col col-12 justify-content-center m-5">
  <h3>Compañias</h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered" width="100%">
      <thead >
      <tr>
        <th>Empresa</th>
        <th>Tamaño</th>
        <th>Pais</th>
        <th>Area</th>
        <th>Web</th>
        <th>LinkedIn</th>
        <th>Email</th>
        <th></th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th>Empresa</th>
        <th>Tamaño</th>
        <th>Pais</th>
        <th>Area</th>
        <th>Web</th>
        <th>LinkedIn</th>
        <th>Email</th>
        <th></th>
      </tr>
      </tfoot>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.size %></td>
            <td><%= company.country %></td>
            <td><%= company.area %></td>
            <td><%= company.web %></td>
            <td><%= company.linkeind_id %></td>
            <td><%= company.email %></td>
            <td><%= link_to 'Edit', edit_company_path(company), class: "btn btn-default btn-xs pull-right" %><%= link_to 'Destroy', company_path(company), class: "btn btn-default btn-xs pull-right", method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>

    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Grafico Empresa/Personas</h3>
        </div>
        <div class="box-body">
          <div class="chart">
            <canvas id="grafico-genero" width="4" height="2"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to 'Crear', new_company_path, class: "btn btn-default pull-right" %>
     <%= link_to 'Volver', welcome_index_path, class: "btn btn-default pull-right" %>
  </div>

  <!-- /.box-body -->
</div>
</div>
</div>
<% content_for :title do 'Compañias' end %>

<script>
  <% content_for :javascript do %>
    var ctx = document.getElementById('grafico-genero');
    var myDoughnutChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ["buk", "CocaCola"],
        datasets: [{
          data: json [2, 3],
          backgroundColor: ['rgb(11, 98, 164)', 'rgb(255, 99, 132)']
        }]
      }
    });
  <% end %>
</script>

  
  
  
  
